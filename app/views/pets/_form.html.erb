<div class='container pt-5'>
  <div class='row'>
    <div class='col-6 offset-3'>
      <%= simple_form_for pet_for_form do |f| %>
        <%= f.input :name %>
        <%= f.input :species, collection: Pet::SPECIES %>
        <%= f.input :date %>
        <%= f.input :address %>
        <%= f.submit "Submit", class:'btn btn-primary w-100' %>
      <% end %>
    </div>
  </div>
</div>